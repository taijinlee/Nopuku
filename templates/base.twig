<!doctype html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>

  {# Basic Page Needs #}
  <meta charset="utf-8" />
  <title>{% block title %}{% endblock %}</title>
  <meta name="description" content="">
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  {# Mobile Specific Metas #}
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" /> 

  {% block css %}
    <link rel="stylesheet" href="http://static.{{ constants.domain }}/css/base.css">
    <link rel="stylesheet" href="http://static.{{ constants.domain }}/css/skeleton.css">
    <link rel="stylesheet" href="http://static.{{ constants.domain }}/css/layout.css">
  {% endblock %}

  {# Favicons #}
  <link rel="shortcut icon" href="http://static.{{ constants.domain }}/img/favicon.ico">
  <link rel="apple-touch-icon" href="http://static.{{ constants.domain }}/img/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="72x72" href="http://static.{{ constants.domain }}/img/apple-touch-icon-72x72.png" />
  <link rel="apple-touch-icon" sizes="114x114" href="http://static.{{ constants.domain }}/img/apple-touch-icon-114x114.png" />

</head>

<body class="{% block body_class %}base{% endblock %}">
  {% block content %}{% endblock %}
  {% block js %}
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/mootools/1.3.2/mootools-yui-compressed.js"></script>
  {% endblock %}
</body>
</html>
